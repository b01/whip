{
    "authors": [
        {
            "homepage": "http://www.kshabazz.net/",
            "name": "Khalifah Khalil Shabazz",
            "role": "Developer"
        }

    ],
    "autoload": {
        "psr-4": {
            "Whip\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Whip\\Test\\": "test"
        }
    },
    "description": "Whip gives you a foundation for building web pages with forms.",
    "license": "MIT",
    "name": "kshabazz/whip",
    "require": {
        "ext-json": "*",
        "guzzlehttp/guzzle": ">=6.0",
        "kshabazz/slib": ">=2.0",
        "kshabazz/whip-lash": "*",
        "php": ">=7.0",
        "psr/log": ">=1.0",
        "psr/http-message": ">=1.0"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.0",
        "phpstan/phpstan": "^0.10.3",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^2.0",
        "twig/twig": "^2.0"
    },
    "scripts": {
        "units": "phpunit",
        "pcs": "./vendor/bin/phpcs -p --standard=PSR2 --severity=8 --colors src"
    },
    "suggest": {
        "twig/twig": "Required if you plan to use the TwigRendered."
    }
}
